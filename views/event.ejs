                            <p>
                                <%= eventDetails[0].locationName %>
                                    <br>
                                    <%= eventDetails[0].locationAddress %>,
                                        <%= eventDetails[0].locationPostcode %>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="container outline">
                    <div class="row">
                        <div class="col-1">

                        </div>
                        <div class="col">
                            <p>Add to calendar</p>
                        </div>
                    </div>
                </div>
            </div>


